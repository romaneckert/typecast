{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2017",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true
    },
    "include": ["config", "service", "validator", "view-helper", "middleware", "core", "entity", "util", "interface", "route", "index.ts", "application.ts"],
    "exclude": ["node_modules"]
}
