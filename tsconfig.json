{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2017",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true
    },
    "include": ["service", "validator", "view-helper", "config", "middleware", "core", "entity", "util", "interface", "route", "index.ts"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
