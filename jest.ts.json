{
    "testEnvironment": "node",
    "transform": {
        "^.+\\.ts$": "ts-jest"
    },
    "bail": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
        "<rootDir>/config/**",
        "<rootDir>/core/**",
        "<rootDir>/decorator/**",
        "<rootDir>/entity/**",
        "<rootDir>/error/**",
        "<rootDir>/interface/**",
        "<rootDir>/middleware/**",
        "<rootDir>/route/**",
        "<rootDir>/service/**",
        "<rootDir>/util/**",
        "<rootDir>/validator/**",
        "<rootDir>/view-helper/**"
    ],
    "coverageReporters": ["json-summary", "text"],
    "testPathIgnorePatterns": ["<rootDir>/dist"],
    "verbose": true,
    "errorOnDeprecated": true,
    "resetModules": true
}
