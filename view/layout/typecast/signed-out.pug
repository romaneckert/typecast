extends ../default.pug

block append head
    link(rel='stylesheet' href=view.asset('typecast/css/style.css'))
    link(rel='stylesheet' href=view.asset('vendor/fontawesome/css/all.min.css'))

block body
    .typecast-page.typecast-page-panel
        .typecast-panel
            a.typecast-logo.typecast-brand-name(href=view.url('typecast'))=view.translate(locale, 'application.title')

            .typecast-panel-content
                block content

            .typecast-panel-footer
                p
                    span.typecast-brand-name=view.translate(locale, 'typecast.title')
                    |
                    | -
                    |
                    =view.translate(locale, 'typecast.panel.footer.text', view.url('typecast'))

