extends ../default.pug

block append head
    link(rel='stylesheet' href=view.asset('typecast/css/style.css'))
    link(rel='stylesheet' href=view.asset('vendor/fontawesome/css/all.min.css'))

block body
    .typecast-page.typecast-page-panel
        .typecast-panel
            a.typecast-logo.typecast-brand-name=view.translate(locale, 'application.title')

            .typecast-panel-content
                block content

            a.typecast-panel-footer(target="_blank" href='https://www.npmjs.com/package/@typecast/core')=view.translate(locale, 'typecast.panel.footer.text')

