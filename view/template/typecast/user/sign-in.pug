extends ../../../layout/typecast/signed-out

block append head
    title=view.translate('typecast.user.sign_in.title')
    meta(name="description" content=view.translate('typecast.user.sign_in.description'))

block content

    h1.h2=view.translate('typecast.user.sign_in.headline')

    .typecast-text
        p=view.translate('typecast.user.sign_in.text')

    +error(errors=form.errors)

    +form(method='post' form=form)
        .form-group
            label(for='email')=view.translate('typecast.form.label.email')
            +textfield.form-control(id='email' type='email' name='email' form=form required='required')

        .form-group
            label(for='password')=view.translate('typecast.form.label.password')
            +textfield.form-control(id='password' type='password' name='password' form=form required='required')

        button.btn.btn-primary(type='submit')=view.translate('typecast.form.sign_in')

    .typecast-text
        p!=view.translate('typecast.user.sign_in.text_bottom', {url: view.url('typecast/user/password-reset')})
