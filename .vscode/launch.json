    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Jest Tests",
            "cwd": "${workspaceFolder}",
            "args": ["--inspect-brk", "${workspaceRoot}/node_modules/.bin/jest", "--runInBand", "--config", "jest.ts.json"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
